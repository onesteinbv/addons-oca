<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="internal_layout_hour_report">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"></t>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"></t>
        </t>

        <div class="header">
            <div class="row">
                <t t-if="print_logo">
                    <img t-att-src="'data:image/png;base64,%s' % company.logo"
                        style="width: 3cm; margin-right: 0; padding: 0; position: absolute; top: 0.5cm; right: 0; float: right;" />
                </t>
            </div>
        </div>
        <div class="article">
            <t t-raw="0" />
        </div>
        <div class="footer">
            <div t-if="print_logo" class="text-center" style="width: 100%; border-top: 0px solid black; color: #4d4e53; font-size: 8.0pt; margin-top: 0px;">

                <ul class="list-inline">
                    <li>Page</li>
                    <li><span class="page"/></li>
                    <li>/</li>
                    <li><span class="topage"/></li>
                </ul>

            </div>
            <t t-if="print_logo and not company.custom_footer">
                <div style="text-align: center; width: 210mm; font-size: 12pt; color: #4C4C4C;">
                    Beneluxweg 37  |  4904 SJ  Oosterhout  |  Nederland<br/>
                    smoose.nl  |  info@smoose.nl  |  T +31 (0)88 627 0300  |  F +31 (0)88 627 0301<br/>
                    ABN AMRO Breda  |  IBAN NL50ABNA0565778544  |  BIC ABNANL2A  |  KvK 56048963  |  BTW 851956178B01<br/>
                </div>
            </t>
            <t t-if="print_logo and company.custom_footer" style="font-size: 12pt;">
                <span t-raw="company.rml_footer"/>
            </t>

            <div t-if="not print_logo" class="text-center" style="padding-top: 0px; width: 100%; border-top: 0px solid black; color: #4d4e53; font-size: 7.0pt; margin-top: 0px;">

                <ul class="list-inline">
                    <li>Page</li>
                    <li><span class="page"/></li>
                    <li>/</li>
                    <li><span class="topage"/></li>
                </ul>

            </div>
        </div>

    </template>

</odoo>
